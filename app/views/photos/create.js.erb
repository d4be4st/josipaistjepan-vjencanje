<% if @photo.new_record? %>
  alert("Failed to upload photo: <%= j @photo.errors.full_messages.join(', ').html_safe %>");
<% else %>
  $("#photos").prepend("<%= j render(@photo) %>");
  window.total_upload -= 1;
  if (window.total_upload === 0) {
    $(".upload").remove();
  }
  $("a[rel^='prettyPhoto']").prettyPhoto({
    social_tools: ''
  });
<% end %>